.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header.toCompete
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | MathWars
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title == 'Post Question') ? 'active' : undefined)
          a(href='/Compose') Compose
        li(class=(title == 'Archive') ? 'active' : undefined)
          a(href='/viewQuestions') View Questions
        li(class=(title == '1v1') ? 'active' : undefined)
          a(href='/1v1') 1v1
        li
          a(href='/status') Status
      ul.nav.navbar-nav.navbar-right
        if invitationTrigger
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/startCompete') Competition Invite
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li
                a(href='/user-question') My Questions and Answers
              li
                a(href='/user-competition') Track My Competitions
              li.divider
              li
                a(href='/logout') Logout
script#DropDownScript(type='text/template').
  <div class="dropdown">
    <button id= 'invitations' class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Invitations
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" id='invitationList'>
      <li><a href='/startCompetition' data-userthatInvitedYouId='{{userIDThatInvitedYou}}'>{{name}}</a></li>
    </ul>
  </div>
