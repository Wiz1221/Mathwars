extends ../layout

block content
  .page-header
    h2 WAR IS NOW
  
    p.default if you are seeing this right now, then you haven't been invited to join a Competition
    p.default Invite someone or accept an invitation now!
    
    #domToAppear
      
  script#WarDOM(type='text/template').
    <div class="countDown" style="text-align:center;">10:00</div>
    <div id='{{questionID}}'>{{question}}</div>
    <div class="funkyradio">
      <div class="funkyradio-success">
          <input type="radio" name="radio" id="radio1" />
          <label for="radio1">First Option default</label>
      </div>
      <div class="funkyradio-success">
          <input type="radio" name="radio" id="radio2" checked/>
          <label for="radio2">Second Option primary</label>
      </div>
      <div class="funkyradio-success">
          <input type="radio" name="radio" id="radio3" />
          <label for="radio3">Third Option success</label>
      </div>
      <div class="funkyradio-success">
          <input type="radio" name="radio" id="radio4" />
          <label for="radio4">Fourth Option danger</label>
      </div>
    </div>
    <form>
      <button type="submit" class="btn btn-default" style="margin-top:30px;">Submit</button>
    </form>
block scripts
  script(src='/js/onevonePublic.js')
